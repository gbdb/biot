<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:timePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>


    <style name="MyDatePickerDialogTheme" parent="AppTheme">
        <item name="android:timePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/timer_off</item>
        <item name="colorPrimaryDark">@color/timer_off</item>
        <item name="colorAccent">@color/timer_off</item>
    </style>

    <style name="MyDatePickerStyle2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/timer_on</item>
        <item name="colorPrimaryDark">@color/timer_on</item>
        <item name="colorAccent">@color/timer_on</item>
    </style>
</resources>
