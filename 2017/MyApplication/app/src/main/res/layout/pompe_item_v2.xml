<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/water_pump"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/pump_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:text="Pompe"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignStart="@+id/pump_name"
                    android:layout_below="@+id/pump_name"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_timer_black_24dp" />

                <Switch
                    android:id="@+id/pump_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pump_name"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:checked="false" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_centerInParent="false"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:text="Cycle actif:" />

                <TextView
                    android:id="@+id/cycleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_row="1"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_weight="0.8"
                    android:text="Normal" />

                <TextView
                    android:id="@+id/timeOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3"
                    android:layout_below="@+id/imageView3"
                    android:text="10 " />

                <TextView
                    android:id="@+id/timeUnitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_marginLeft="6dp"
                    android:layout_toEndOf="@+id/timeOn"
                    android:text="minutes ON" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeUnitLabel"
                    android:layout_marginLeft="6dp"
                    android:layout_toEndOf="@+id/timeOn"
                    android:text="minutes OFF" />

                <TextView
                    android:id="@+id/timeOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/timeOn"
                    android:layout_below="@+id/timeOn"
                    android:text="22" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>